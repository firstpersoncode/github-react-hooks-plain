{
    "name": "github-react-hooks",
    "version": "0.1.0",
    "description": "GitHub page with user search and repository search, build using React",
    "private": false,
    "main": "index.js",
    "author": "Nasser Maronie <nasser.maronie@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git@github.com:firstpersoncode/my-react-kit.git"
    },
    "dependencies": {
        "@material-ui/styles": "^4.9.10",
        "body-parser": "1.19.0",
        "deepmerge": "4.2.2",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "marked": "^4.0.10",
        "morgan": "1.10.0",
        "react": "16.11.0",
        "react-dom": "16.11.0",
        "react-helmet-async": "1.0.4",
        "react-loadable": "5.5.0",
        "react-loadable-ssr-addon": "0.2.0",
        "react-loadable-visibility": "3.0.1",
        "react-router": "5.1.2",
        "react-router-config": "5.1.1",
        "react-router-dom": "5.1.2",
        "yarn-or-npm": "3.0.1"
    },
    "devDependencies": {
        "@babel/cli": "7.6.4",
        "@babel/core": "7.6.4",
        "@babel/node": "7.6.3",
        "@babel/plugin-proposal-class-properties": "7.5.5",
        "@babel/plugin-proposal-object-rest-spread": "7.6.2",
        "@babel/plugin-syntax-dynamic-import": "7.2.0",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "7.6.3",
        "@babel/preset-react": "7.6.3",
        "@testing-library/jest-dom": "4.2.3",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^25.4.0",
        "babel-loader": "8.0.6",
        "enzyme": "3.10.0",
        "enzyme-adapter-react-16": "1.15.1",
        "eslint": "5.15.1",
        "eslint-config-prettier": "4.1.0",
        "eslint-plugin-import": "2.18.2",
        "eslint-plugin-prettier": "3.0.1",
        "eslint-plugin-react": "7.16.0",
        "eslint-plugin-react-hooks": "2.2.0",
        "file-loader": "4.2.0",
        "husky": "^4.2.5",
        "jest": "24.9.0",
        "link-module-alias": "1.2.0",
        "prettier": "1.18.2",
        "regenerator-runtime": "0.13.3",
        "supertest": "4.0.2",
        "webpack": "4.41.2",
        "webpack-bundle-analyzer": "3.6.0",
        "webpack-cli": "3.3.10",
        "webpack-dev-middleware": "3.7.2",
        "webpack-hot-middleware": "2.25.0"
    },
    "scripts": {
        "start": "NODE_ENV=production yarn-or-npm run start:prod",
        "dev": "NODE_ENV=development yarn-or-npm run start:dev",
        "prod": "NODE_ENV=production yarn-or-npm run start:prod",
        "start:dev": "yarn-or-npm run build:dev && yarn-or-npm run server",
        "start:prod": "yarn-or-npm run build:prod && yarn-or-npm run server",
        "build:dev": "yarn-or-npm run clean:dist && yarn-or-npm run compile:dev",
        "build:prod": "yarn-or-npm run clean:dist && yarn-or-npm run clean:stats && yarn-or-npm run compile:prod",
        "compile:dev": "webpack --config=__core__/webpack --profile --progress --mode=development",
        "compile:prod": "webpack --config=__core__/webpack --profile --progress -p --mode=production --json > stats.production.json",
        "clean": "echo 'Cleaning packages & outputs.. then reinstall packages' && yarn-or-npm cache clean && yarn-or-npm run clean:lock && yarn-or-npm run clean:dist && yarn-or-npm run clean:stats && yarn-or-npm run clean:packages && npm install && yarn install",
        "clean:dist": "[ -d ./dist/ ] && rm -rf ./dist/ || echo 'No dist folder yet..'",
        "clean:stats": "[ -e stats.*.json ] && rm ./stats.*.json || echo 'No stats bundle yet..'",
        "clean:packages": "[ -d ./node_modules/ ] && rm -rf ./node_modules/ || echo 'No modules yet..'",
        "clean:lock": "[ -e packages-lock.json ] && rm ./packages-lock.json || echo 'No packages-lock.json yet..' && [ -e yarn.lock ] && rm ./yarn.lock || echo 'No yarn.lock yet..'",
        "server": "babel-node -r node_modules/dotenv/config ./src/__app__/server",
        "test": "eslint --fix --ext=js,jsx,ts,tsx src __core__ && jest --verbose --coverage --config ./jest.config.js",
        "analyze": "webpack-bundle-analyzer ./stats.*.json",
        "preinstall": "command -v link-module-alias && link-module-alias clean || true",
        "postinstall": "link-module-alias"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "_moduleAliases": {
        "~": "src",
        "__core__": "__core__"
    }
}
